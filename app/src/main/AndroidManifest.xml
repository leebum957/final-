<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidmobile.courseworkemobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Courseworkemobile">
        <activity
            android:name=".AddExpenseScreen"
            android:parentActivityName=".ExpenseScreen"
            android:exported="false"
            android:label="Add Type Expense" />
        <activity
            android:name=".ExpenseScreen"
            android:exported="false"
            android:parentActivityName=".UpdateTripItemScreen"
            android:label="Expenses Detail" />
        <activity
            android:name=".UpdateTripItemScreen"
            android:parentActivityName=".MainActivity"
            android:exported="false"
            android:label="Update Trip" />
        <activity
            android:name=".AddTripScreen"
            android:parentActivityName=".MainActivity"
            android:exported="false"
            android:label="Add Trip" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Coursework">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>